<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tinohacks.connectfinal.UpdateSchedule">



    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="Time"
        android:textColor="@android:color/black"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/time1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="1 - 2 P.M."
        android:layout_below="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time" />

    <TextView
        android:id="@+id/time2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="2 - 3 P.M."
        android:layout_below="@+id/activity1"
        android:layout_alignLeft="@+id/time1_2"
        android:layout_alignStart="@+id/time1_2" />

    <TextView
        android:id="@+id/time3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="3 - 4 P.M."
        android:layout_below="@+id/activity2"
        android:layout_alignLeft="@+id/time2_3"
        android:layout_alignStart="@+id/time2_3" />

    <TextView
        android:id="@+id/time4_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/time3_4"
        android:layout_alignLeft="@+id/time3_4"
        android:layout_alignRight="@+id/time3_4"
        android:layout_alignStart="@+id/time3_4"
        android:layout_below="@+id/time3_4"
        android:layout_marginTop="24dp"
        android:text="4 - 5 P.M." />

    <TextView
        android:id="@+id/time5_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 - 6 P.M."
        android:layout_marginTop="26dp"
        android:layout_below="@+id/activity4"
        android:layout_alignLeft="@+id/time4_5"
        android:layout_alignStart="@+id/time4_5" />

    <EditText
        android:id="@+id/activity1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:ems="10"
        android:hint = "Enter Activity"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/time1_2"
        android:layout_alignBottom="@+id/time1_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/activity2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/time2_3"
        android:layout_alignBottom="@+id/time2_3"
        android:layout_alignLeft="@+id/activity1"
        android:layout_alignStart="@+id/activity1"
        android:ems="10"
        android:hint="Enter Activity"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/activity3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/time3_4"
        android:layout_alignBottom="@+id/time3_4"
        android:layout_alignLeft="@+id/activity2"
        android:layout_alignStart="@+id/activity2"
        android:ems="10"
        android:hint="Enter Activity"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/activity4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time4_5"
        android:layout_alignBottom="@+id/time4_5"
        android:layout_alignLeft="@+id/activity3"
        android:layout_alignStart="@+id/activity3"
        android:ems="10"
        android:hint="Enter Activity"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignLeft="@+id/activity1"
        android:layout_alignStart="@+id/activity1"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <EditText
        android:id="@+id/activity5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/activity4"
        android:layout_alignRight="@+id/activity4"
        android:layout_below="@+id/activity4"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Enter Activity"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/saveSchedule"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="Save"
        android:layout_below="@+id/activity5"
        android:layout_alignRight="@+id/activity"
        android:layout_alignEnd="@+id/activity"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />
</android.widget.RelativeLayout>
